# ============================================================
# Wolf Disc Golf Scoring App
# Security + Rewrite Isolation + PWA Cache Rules
# Location: /public_html/wolf/.htaccess
# ============================================================

# Prevent directory listing
Options -Indexes

# Serve index.html by default
DirectoryIndex index.html

# ------------------------------------------------------------
# IMPORTANT:
# Disable parent rewrite rules (prevents Website Builder
# from hijacking /wolf/* requests and causing 404s)
# ------------------------------------------------------------
RewriteEngine Off


# ============================================================
# Security Headers
# ============================================================
<IfModule mod_headers.c>

  Header always set X-Content-Type-Options "nosniff"
  Header always set X-Frame-Options "SAMEORIGIN"
  Header always set Referrer-Policy "strict-origin-when-cross-origin"
  Header always set Permissions-Policy "camera=(), microphone=(), geolocation=()"

  # CSP: static self-hosted app
  Header always set Content-Security-Policy "default-src 'self'; img-src 'self' data:; style-src 'self'; script-src 'self'; manifest-src 'self'; object-src 'none'; base-uri 'self'; frame-ancestors 'self'; upgrade-insecure-requests"

</IfModule>


# ============================================================
# Block access to dotfiles (defense-in-depth)
# Allow .well-known (ACME, etc.) if ever needed
# ============================================================
<FilesMatch "^\.well-known">
  Require all granted
</FilesMatch>

<FilesMatch "^\.(?!well-known)">
  Require all denied
</FilesMatch>


# ============================================================
# Cache-Control Rules (PWA-friendly, no fingerprinted assets)
# ============================================================
<IfModule mod_headers.c>

  # App shell: always revalidate so updates appear quickly
  <FilesMatch "\.(html)$">
    Header always set Cache-Control "no-cache"
  </FilesMatch>

  # Manifest should revalidate
  <Files "manifest.webmanifest">
    Header always set Cache-Control "no-cache"
  </Files>

  # Service worker must NEVER be cached aggressively
  <Files "service-worker.js">
    Header always set Cache-Control "no-cache, no-store, must-revalidate"
    Header always set Pragma "no-cache"
    Header always set Expires "0"
  </Files>

  # CSS/JS are NOT fingerprinted, so do NOT mark immutable
  <FilesMatch "\.(css|js)$">
    Header always set Cache-Control "public, max-age=31536000, immutable"
  </FilesMatch>

  # Images/icons can be cached long-term
  <FilesMatch "\.(png|jpg|jpeg|gif|svg|webp|ico)$">
    Header always set Cache-Control "public, max-age=31536000, immutable"
  </FilesMatch>

</IfModule>


# ============================================================
# Expires fallback (for hosts relying on mod_expires)
# ============================================================
<IfModule mod_expires.c>
  ExpiresActive On

  # Revalidate app shell + core files
  ExpiresByType text/html "access plus 0 seconds"
  ExpiresByType text/css "access plus 0 seconds"
  ExpiresByType application/javascript "access plus 0 seconds"
  ExpiresByType application/manifest+json "access plus 0 seconds"
  ExpiresByType application/json "access plus 0 seconds"

  # Long cache for images/icons
  ExpiresByType image/png "access plus 1 year"
  ExpiresByType image/jpeg "access plus 1 year"
  ExpiresByType image/svg+xml "access plus 1 year"
  ExpiresByType image/webp "access plus 1 year"
  ExpiresByType image/gif "access plus 1 year"
  ExpiresByType image/x-icon "access plus 1 year"

  # Extra safety: service worker should not inherit long-lived behavior
  <Files "service-worker.js">
    ExpiresActive Off
  </Files>

</IfModule>
